# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


# Controller showing a sample home page
GET     /                           controllers.HomeController.index

# Create account form
GET     /sign-up                    controllers.AccountController.create
POST    /sign-up                    controllers.AccountController.store

# Show songs
GET     /songs                      controllers.SongController.index

# Play song
GET     /songs/:uuid                controllers.SongController.show(uuid :Integer)

# Delete song
DELETE  /songs/:uuid                controllers.SongController.destroy(uuid :Integer)

# Show account
GET     /account/:username          controllers.AccountController.show(username :String)

# Account edit
GET     /account/:username/edit             controllers.AccountController.edit(username :String)
PATCH   /account/:username                  controllers.AccountController.update(username :String)

# Account delete
DELETE  /account/:username                  controllers.AccountController.delete(username :String)


# Add song for an account
GET     /account/:username/upload     controllers.SongController.create(username :String)
POST    /account/:username/upload            controllers.SongController.store(username :String)
